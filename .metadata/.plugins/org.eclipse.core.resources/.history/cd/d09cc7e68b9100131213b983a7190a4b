package model;

import java.util.HashMap;

public class Calculadora {
	private int hosts;
	private int decMasc;
	private String binMasc;
	private HashMap<Integer,Integer> dicMasc = new HashMap<Integer,Integer>();
	
	public Calculadora(){}
	
	public void calcDecMas(){
		for(int i = 0; i < 33; i++){
			this.dicMasc.put(i,(int) Math.pow(2, 1));
		}
	}
	
	public int getHosts() {
		return hosts;
	}
	public boolean setHosts(int hosts) {
		if(hosts <= Math.pow(2,32) && hosts > 0){
			this.hosts = hosts;
			return true;
		}
		return false;
	}
	public int getDecMasc() {
		return decMasc;
	}
	public void setDecMasc(int decMasc) {
		this.decMasc = decMasc;
	}
	public String getBinMasc() {
		return binMasc;
	}
	public void setBinMasc(String binMasc) {
		this.binMasc = binMasc;
	}
	
	
}
